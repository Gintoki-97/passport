@import "_global"

// Custom block style

body {
    margin 0
    padding 0
    font 12px/1.5 'Roboto Slab', "Microsoft YaHei", arial, 'Hiragino Sans GB', sans-serif
}

.header {

  position relative
  margin 0 auto
  width 1000px
  line-height 100px
  overflow hidden

  .logo {

    position relative
    margin 10px 0
    position relative
    width 300px
    height 100px
    float left

    a {
      .img {
        border none
      }
    }

    .sign {
      position absolute
      top 0
      right 0
      font-size 24px
    }
  }

  .links {
    position absolute
    right 0px
    bottom 0px
    line-height 45px
    color color-gray-lv6
    font-size 12px
  }
}

.content {

  .tip {

    padding-top 10px
    padding-bottom 10px
    width 100%
    text-align center

    .wrapper {

      i {
        position relative
        top 2px
      }
      
      .text {
        display inline-block
        vertical-align middle
        color color-gray-lv9
        font-size 12px
      }
    }
  }

  .center {

    margin 10px 0 20px
    position relative
    height 475px
    z-index 5

    .signin-box {

      margin 0 auto
      width 990px

      .form-box {

        position relative
        top 40px
        width 346px
        float right
        background color-white
        border 1px solid color-gray-lvd
        overflow visible
        z-index 4

        .tips-wrapper {

          padding-top 10px
          padding-bottom 10px
          width 100%
          text-align center
          background color-gray-small

          .tips {

            .iconfont {
              position relative
              top 2px
            }

            .text {
              display inline-block
              vertical-align middle
              font-size 12px
              color color-gray-lv9
            }
          }
        }

        .tabs {

          width 100%

          .tab {

            position relative
            float left
            width 50%
            height 54px
            font-size 15px
            text-align center
            background color-white
            border-bottom 1px solid color-gray-border

            a {
              position absolute
              top 18px
              left 0
              width 99%
              height 18px
              border-right 1px solid color-gray-border
            }
          }
        }

        .signin {

          .wrapper {

            padding 20px

            .err-msg {
              
              .text {
                height 24px
                font-size 13px
                color color-red
                overflow hidden
              }
            }

            .form {
              
              .form-item {

                margin-bottom 20px
                position relative
                width 306px
                height 38px
                border 1px solid #bdbdbd

                .iconfont {
                  position absolute
                  top 0
                  left 0
                  width 38px
                  height 38px
                  line-height 38px
                  text-align center
                  border-right 1px solid #bdbdbd
                  z-index 3
                }

                .input {
                  padding 18px 30px 18px 50px
                  display block
                  width 100%
                  height 18px
                  line-height 18px
                  float none
                  border 0
                  font-size 14px
                  overflow hidden
                  outline none
                }
              }
            }
          }
        }
      }
    }

    .banner {
      position absolute
      top 0
      left 0
      width 100%
      height 475px
    }
  }
}